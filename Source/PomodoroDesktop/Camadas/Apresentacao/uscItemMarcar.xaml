<UserControl x:Class="uscItemMarcar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PomodoroDesktop"
          mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="200"
             MinHeight="26" MinWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Name="lblDescricao" Margin="0" Grid.Column="0"></TextBlock>
        <CheckBox Name="chkMarcar" Grid.Column="1" Margin="2" HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
    </Grid>

</UserControl>
